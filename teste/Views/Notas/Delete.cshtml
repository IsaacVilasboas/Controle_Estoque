@model teste.Entities.Nota

@{
    ViewData["Title"] = "Confirmação de Exclusão";
}
<style>
    .login-container {
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 5px 10px 0px rgba(0, 0, 0, 0.3) -5px -10px 10px 0px rgba(255, 255, 0.3);
        max-width: 1600px;
        margin: 0 auto;
        margin-bottom: 40px;
        margin-top: 80px; /* Espaço superior */
        border: 3px solid #333; /* Adiciona uma borda escura */
    }

    .login-title {
        text-align: center;
        margin-bottom: 20px;
    }
</style>

<br />
<br />

<div class="login-container">
<div class="container mt-5">
    <div class="text-center">
        <h2 class="display-3">Confirmação de Exclusão de Notas</h2>
        <br>
        <p class="lead">Você está prestes a excluir a nota do produto <strong>@Model.FkProdutosNavigation?.NomeProduto</strong>. Tem certeza de que deseja continuar?</p>
    </div>

    <form method="post" asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <div class="text-center">
            <button type="submit" class="btn btn-dark btn-lg">Confirmar Exclusão  <i class="fa-solid fa-delete-left"></i></button>
        </div>
    </form>

    <div class="text-center mt-3">
        <a class="btn btn-secondary btn-lg" asp-action="Index" role="button"><i class="fa-solid fa-arrow-rotate-left"></i> Cancelar</a>
    </div>
</div>
</div>