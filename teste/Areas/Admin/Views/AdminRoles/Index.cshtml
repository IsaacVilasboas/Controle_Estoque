@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<div class="container mt-4">
    <h1 class="bg-info text-white p-3">Lista de Roles</h1>
    <a asp-action="Create" class="btn btn-secondary mb-3">Criar Nova Role</a>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Update" asp-route-id="@role.Id">Editar</a>
                        </td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja deletar esta role?')">Deletar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Altera a cor de fundo da página */
    }

    .table-responsive {
        overflow-x: auto; /* Adiciona rolagem horizontal à tabela em telas menores */
    }

    th, td {
        vertical-align: middle; /* Alinha verticalmente o conteúdo das células */
    }
</style>