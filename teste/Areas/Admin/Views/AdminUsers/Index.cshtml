@model IEnumerable<IdentityUser>

<h1>Usuários</h1>

@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account" asp-area="" class="btn btn-primary mb-3" style="width: auto">
        Novo Usuário
    </a>

    <div class="table-responsive">
        <table class="table table-bordered" id="table-produtos">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>Nome</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">Deletar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            Não existem usuários
        </div>

        <div class="card-body">
            <h5 class="card-title">
                Clique no botão para criar um usuário
            </h5>
            <a class=" btn btn-primary" style="width:auto"
               asp-controller="Account" asp-area="" asp-action="Register">
                Novo Usuário
            </a>
        </div>
    </div>
}

<style>
    body {
        background-color: #fff; /* Define a cor de fundo da página como branco */
    }
</style>